mqtt:
  enabled: True
  host: {{ mqtt_host }}
  port: {{ mqtt_port }}
  user: {{ mqtt_user }}
  password: {{ mqtt_password }}

detectors:
  detector_name:
    type: openvino

database:
  path: {{ frigate_storage_location }}/frigate.db

cameras:
  cctv-front:
    ffmpeg:
      inputs:
        - path: rtsp://{{ frigate_user }}:{{ frigate_password }}@cctv-front.int.moras.uk:554/h264Preview_01_main
          roles:
            - record
        - path: rtsp://{{ frigate_user }}:{{ frigate_password }}@cctv-front.int.moras.uk:554/h264Preview_01_sub
          roles:
            - detect
    detect:
      width: 640
      height: 360
      fps: 4
    record:
      enabled: True
      retain:
        days: 28
  cctv-side:
    ffmpeg:
      inputs:
        - path: rtsp://{{ frigate_user }}:{{ frigate_password }}@cctv-side.int.moras.uk:554/h264Preview_01_main
          roles:
            - record
        - path: rtsp://{{ frigate_user }}:{{ frigate_password }}@cctv-side.int.moras.uk:554/h264Preview_01_sub
          roles:
            - detect
    detect:
      width: 640
      height: 360
      fps: 4
    record:
      enabled: True
      retain:
        days: 28
  cctv-rear:
    ffmpeg:
      inputs:
        - path: rtsp://{{ frigate_user }}:{{ frigate_password }}@cctv-rear.int.moras.uk:554/h264Preview_01_main
          roles:
            - record
        - path: rtsp://{{ frigate_user }}:{{ frigate_password }}@cctv-rear.int.moras.uk:554/h264Preview_01_sub
          roles:
            - detect
    detect:
      width: 640
      height: 360
      fps: 4
    record:
      enabled: True
      retain:
        days: 28